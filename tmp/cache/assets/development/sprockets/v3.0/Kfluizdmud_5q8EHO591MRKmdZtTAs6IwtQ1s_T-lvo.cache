(function() {
  this.PhraseShuffler = React.createClass({
    getInitialState: function() {
      return {
        phrases: this.props.phrases,
        lastIndex: -1
      };
    },
    nextIndex: function() {
      this.state.lastIndex += 1;
      if (this.state.lastIndex >= this.state.phrases.length) {
        this.state.lastIndex = 0;
      }
      return this.state.lastIndex;
    },
    fadeOut: function() {
      var titleElement;
      titleElement = document.querySelector('.hero h2:last-child');
      titleElement.style.opacity = 0;
      return setTimeout(this.fadeIn, 250);
    },
    fadeIn: function() {
      var titleElement;
      titleElement = document.querySelector('.hero h2:last-child');
      titleElement.innerHTML = this.state.phrases[this.nextIndex()];
      titleElement.style.opacity = 1;
      return setTimeout(this.fadeOut, 2750);
    },
    shuffle: function() {
      var phrases_count, random_index, random_phrase, results;
      phrases_count = this.state.phrases.length;
      results = [];
      while (phrases_count) {
        random_index = Math.floor(Math.random() * phrases_count);
        random_phrase = phrases[--phrases_count];
        phrases[phrases_count] = phrases[random_index];
        results.push(phrases[random_index] = random_phrase);
      }
      return results;
    },
    start: function() {
      this.shuffle();
      return this.fadeIn();
    },
    render: function() {
      this.start();
      return false;
    }
  });

}).call(this);
