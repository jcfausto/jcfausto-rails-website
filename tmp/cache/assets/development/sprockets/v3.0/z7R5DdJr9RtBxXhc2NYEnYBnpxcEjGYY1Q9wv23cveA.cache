(function() {
  this.PhraseShuffler = React.createClass({
    getInitialState: function() {
      return {
        phrases: this.props.phrases,
        current_phrase: "Shuffler",
        lastIndex: -1
      };
    },
    nextIndex: function() {
      this.state.lastIndex += 1;
      if (this.state.lastIndex >= this.state.phrases.length) {
        this.state.lastIndex = 0;
      }
      return this.state.lastIndex;
    },
    shuffle: function() {
      var i, j, results, x;
      this.state.current_phrase = this.state.phrases[this.nextIndex()];
      console.log(this.state.current_phrase);
      i = this.state.phrases.length;
      results = [];
      while (i) {
        j = Math.floor(Math.random() * i);
        x = this.state.phrases[--i];
        this.state.phrases[i] = this.state.phrases[j];
        results.push(this.state.phrases[j] = x);
      }
      return results;
    },
    render: function() {
      var titleElement;
      this.shuffle();
      titleElement = document.querySelector('.hero h2:last-child');
      titleElement.innerHTML = this.state.current_phrase;
      titleElement.style.opacity = 1;
      return <br>;
    }
  });

}).call(this);
