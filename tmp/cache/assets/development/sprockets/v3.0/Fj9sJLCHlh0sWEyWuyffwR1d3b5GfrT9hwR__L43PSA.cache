(function() {
  this.PhraseShuffler = React.createClass({
    getInitialState: function() {
      return {
        phrases: this.props.phrases
      };
    },
    shuffle: function() {
      return shuffle;
    },
    render: function() {
      var fadeIn, fadeOut, i, j, lastIndex, nextIndex, titleElement, x;
      titleElement = document.querySelector('.hero h2:last-child');
      lastIndex = -1;
      i = this.state.phrases.length;
      while (i) {
        j = Math.floor(Math.random() * i);
        x = this.state.phrases[--i];
        this.state.phrases[i] = this.state.phrases[j];
        this.state.pphrases[j] = x;
        nextIndex = function() {
          lastIndex += 1;
          if (lastIndex >= this.state.phrases.length) {
            lastIndex = 0;
          }
          return lastIndex;
        };
        fadeIn = function() {
          titleElement.innerHTML = this.state.phrases[nextIndex()];
          titleElement.style.opacity = 1;
          return setTimeout(fadeOut, 2750);
        };
        fadeOut = function() {
          titleElement.style.opacity = 0;
          return setTimeout(fadeIn, 250);
        };
        fadeIn();
      }
      return <h1>Phrase Shuffler - {this.shuffle}</h1>;
    }
  });

}).call(this);
